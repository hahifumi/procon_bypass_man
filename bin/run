#!/usr/bin/env ruby

require "bundler/setup"
require "procon_bypass_man"
require "pry"

ProconBypassMan.run do
  prefix_keys_for_changing_layer [:zr, :r, :zl, :l]
  layer :up, mode: :normal do
    flip [:down, :zr]
  end
  layer :right, mode: :random
  layer :left do
  end
  layer :down do
    flip [:zl]
  end
end
